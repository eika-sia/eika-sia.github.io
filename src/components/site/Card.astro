---
const { title, description, tags = [] }: {
  title: string;
  description: string;
  tags?: string[];
} = Astro.props;
---
<div class="mb-8 p-8 rounded-lg border border-violet-500/20 bg-slate-700/30 shadow-lg hover:border-violet-400/40 hover:bg-slate-600/30 transition-all duration-300 group">
  <h3 class="font-semibold text-xl mb-4 text-slate-100 group-hover:text-violet-200">{title}</h3>
  <p class="mb-6 text-slate-300 text-base leading-relaxed">{description}</p>
  {tags.length > 0 && (
    <div class="mb-6 flex flex-wrap gap-3">
      {tags.map((tag: string) => (
        <span class="bg-slate-800/50 border border-violet-500/30 text-violet-400 text-sm px-4 py-2 rounded-full mono hover:border-violet-400/50 transition-colors">
          {tag}
        </span>
      ))}
    </div>
  )}
  <div>
    <slot />
  </div>
</div>
