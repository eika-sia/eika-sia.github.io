---
interface ExperienceItem {
  position: string;
  organization: string;
  location: string;
  start: string;
  end: string;
  type: string;
  description: string[];
}

import experienceData from '../../data/experience.json';

const typedExperienceData: ExperienceItem[] = experienceData;
---

<div class="space-y-8">
  <!-- Work Experience -->
  <div>
    <h3 class="text-xl font-semibold text-slate-100 mb-6 border-l-2 border-violet-500 pl-3">Work Experience</h3>
    <div class="space-y-6">
      {typedExperienceData.map((exp: ExperienceItem) => (
        <div class="bg-slate-700/30 border border-violet-500/20 rounded-lg p-6 hover:border-violet-400/40 transition-all">
          <div class="flex items-start justify-between mb-3">
            <div class="flex-1">
              <h4 class="text-lg font-semibold text-slate-100 mb-1">{exp.position}</h4>
              <p class="text-violet-400 text-sm mb-1">{exp.organization}</p>
              <p class="text-slate-400 text-xs">{exp.location}</p>
            </div>
            <div class="text-right text-sm text-slate-400 ml-4">
              <div class="mono">{exp.start} - {exp.end}</div>
              <span class={`px-2 py-1 rounded text-xs mono mt-1 inline-block ${
                exp.type === 'ongoing' ? 'bg-green-500/20 text-green-400 border border-green-500/30' :
                exp.type === 'academic' ? 'bg-blue-500/20 text-blue-400 border border-blue-500/30' :
                exp.type === 'volunteer' ? 'bg-purple-500/20 text-purple-400 border border-purple-500/30' :
                'bg-violet-500/20 text-violet-400 border border-violet-500/30'
              }`}>
                {exp.type}
              </span>
            </div>
          </div>
          <ul class="space-y-1 text-slate-300 text-sm">
            {exp.description.map((item: string) => (
              <li class="flex items-start gap-2">
                <span class="text-violet-400 mt-1">•</span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>

  <!-- Research Interests -->
  <div>
    <h3 class="text-xl font-semibold text-slate-100 mb-6 border-l-2 border-violet-500 pl-3">Research Interests</h3>
    <div class="bg-slate-700/30 border border-violet-500/20 rounded-lg p-6">
      <div class="grid gap-4 md:grid-cols-2">
        <div class="space-y-2">
          <div class="text-violet-400 font-semibold">Neuroscience</div>
          <ul class="text-slate-300 text-sm space-y-1">
            <li>• Local neural dynamics</li>
            <li>• Spatial cognition</li>
            <li>• Dendritic computation</li>
          </ul>
        </div>
        <div class="space-y-2">
          <div class="text-violet-400 font-semibold">Technology</div>
          <ul class="text-slate-300 text-sm space-y-1">
            <li>• Computer architecture</li>
            <li>• Cryptography</li>
            <li>• Neural computing</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Creative Interests -->
  <div>
    <h3 class="text-xl font-semibold text-slate-100 mb-6 border-l-2 border-violet-500 pl-3">Creative Hobbies</h3>
    <div class="flex flex-wrap gap-3">
      {["Writing", "Dungeons & Dragons", "Drawing"].map((hobby) => (
        <span class="bg-slate-800/50 border border-violet-500/30 text-violet-400 px-4 py-2 rounded-lg text-sm">
          {hobby}
        </span>
      ))}
    </div>
  </div>
</div>
