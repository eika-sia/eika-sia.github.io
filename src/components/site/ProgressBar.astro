---
const { progress = 0 }: { progress?: number } = Astro.props;
const pct = Math.round(progress * 100);
---

<div class="mt-4 space-y-1">
  <div class="h-2 w-full rounded-full bg-slate-700/40 overflow-hidden">
    <div class="h-full rounded-full bg-gradient-to-r from-[var(--accent)] to-[var(--accent-soft)]" style={`width:${pct}%`}></div>
  </div>
  <div class="text-xs mono text-slate-500">{pct}%</div>
</div>
