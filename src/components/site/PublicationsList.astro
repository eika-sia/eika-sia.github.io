---
import Card from './Card.astro';
import publications from '../../data/publications.json';

interface PublicationItem {
  title: string;
  description: string;
  venueType: string;
  venue: string;
  year: number;
  tags: string[];
  authors: string[];
}
const pubs: PublicationItem[] = publications as PublicationItem[];
---
<div class="publications-stack px-1 sm:px-2">
  <div class="max-w-3xl mx-auto">
    {pubs.map(p => (
      <Card class="publication-card" title={p.title} description={p.description} tags={p.tags}>
        <div class="text-base text-slate-300 mb-6">
          <span class="text-violet-400 font-semibold">{p.venueType}:</span> {p.venue}, {p.year}
        </div>
        <div class="text-sm text-slate-400 mono">Author{p.authors.length>1?'s':''}: {p.authors.join(', ')}</div>
      </Card>
    ))}
  </div>
</div>
