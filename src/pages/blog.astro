---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection, type CollectionEntry } from "astro:content";
import Card from '../components/site/Card.astro';

const posts = await getCollection("blog");
// Sort by date (newest first)
const sortedPosts = posts.sort((a: CollectionEntry<"blog">, b: CollectionEntry<"blog">) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<BaseLayout>
  <div class="content-shell">
    <section class="relaxed-section max-w-5xl mx-auto">
      <header class="space-y-5 md:space-y-7 text-left">
        <h1 class="font-bold leading-tight tracking-tight text-slate-100 text-4xl md:text-5xl">Blog</h1>
        <p class="narrow-text text-base md:text-lg text-slate-300 leading-relaxed md:leading-loose">
          Insights from my research in neuroscience, computer engineering, and the intersection of human cognition with technology.
        </p>
        <div class="header-accent-bar w-48"></div>
      </header>
      <div class="first-card-gap relaxed-stack">
        {sortedPosts.map((post: CollectionEntry<"blog">) => (
          <Card title={post.data.title} description={post.data.description} tags={post.data.tags}>
            <div class="text-xs text-slate-500 mb-4 mono flex items-center gap-3">
              <span class="text-[var(--accent-soft)]">{new Date(post.data.date).toLocaleDateString()}</span>
            </div>
            <div class="flex items-center justify-end pt-1">
              <a href={`/blog/${(post.data as any).slug || post.id.replace(/\.md$/, '')}`} class="badge !text-[0.62rem] px-5 py-3 font-semibold tracking-wide hover:brightness-110 transition inline-flex items-center gap-2">
                Read Article â†’
              </a>
            </div>
          </Card>
        ))}
      </div>
    </section>
  </div>
</BaseLayout>
